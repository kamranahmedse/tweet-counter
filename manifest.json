{
  "manifest_version": 2,
  "name": "Tweet Counter",
  "description": "Brings back the tweet character counter",
  "version": "1.0.0",
  "minimum_chrome_version": "15",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://*.twitter.com/*"
      ],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "vendor/twitter-text-1.9.4.min.js",
        "counter.js"
      ],
      "run_at": "document_end"
    }
  ]
}
